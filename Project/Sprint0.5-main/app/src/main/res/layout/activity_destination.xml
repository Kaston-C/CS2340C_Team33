<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DestinationActivity">


    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="316dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/begin_date_field"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:textColorHint="@color/tertiary" />

            <TextView
                android:id="@+id/end_date_field"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColorHint="@color/tertiary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/begin_date_button"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="40dp"
                android:backgroundTint="@color/primary"
                android:text="Start Date" />

            <Button
                android:id="@+id/end_date_button"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary"
                android:text="End Date"
                android:textColorHint="@color/tertiary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dur_text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Duration:"
                android:textColorHint="@color/tertiary"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/duration_field"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="number"
                android:textColorHint="@color/tertiary" />
        </LinearLayout>


        <Button
            android:id="@+id/submit_trip_details_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary"
            android:text="Submit Trip Details" />
    </LinearLayout>

    <include
        layout="@layout/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>