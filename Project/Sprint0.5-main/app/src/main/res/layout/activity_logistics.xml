<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LogisticsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:text="Logistics Screen"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <ImageButton
        android:id="@+id/contributor_button"
        android:layout_width="50dp"
        android:background="@drawable/rounded_secondary_button"
        android:layout_height="50dp"
        android:src="@drawable/add_note"
        android:contentDescription="add person button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="75dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />

    <ImageButton
        android:id="@+id/notes_button"
        android:layout_width="50dp"
        android:background="@drawable/rounded_secondary_button"
        android:layout_height="50dp"
        android:src="@drawable/add_person"
        android:contentDescription="add note button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="75dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp" />

    <include
        layout="@layout/navbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/btnVisualizeTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alloted vs Planned Days Data Visualization"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"/>
    
</RelativeLayout>
